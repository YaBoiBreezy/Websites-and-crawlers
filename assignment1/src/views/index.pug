doctype html

html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width")

    title Products

  body
    nav
      a(href="/popular") Popular

    header
      h2 Search
      form(method="get" action="/")
        p
          label(for="search.name", style="margin-right: 0.2em") Query
          input(type="text", id="search.name", name="name")
        p
        p
          label(for="search.boost", style="margin-right: 0.2em") Boost
          input(type="checkbox", id="search.boost", name="boost")
        p
        p
          label(for="search.limit", style="margin-right: 0.2em") Page Limits
          input(type="number", id="search.limit", name="limit")
        p
          button(type="submit") Search

    article
      h2 Results
      if topPages.length > 0
        each page in topPages
          article
            h2
              a(href=`/popular/${page.id}`)= page.title 
            h3 
              a(href=`${page.url}`)= page.url
            p Score: #{page.score}
            br
      else 
        p No pages found.
